@{
    ViewData["Title"] = "Đăng Nhập Bằng Số Điện Thoại";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng Nhập Bằng Số Điện Thoại</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
		body {
            background: url('/images/login_background.jpg') no-repeat center center fixed;
            
            margin: 0;
            font-family: "Segoe UI", system-ui, -apple-system, "Helvetica Neue", Arial;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* CARD CHÍNH */
        .login-card {
            width: 75%;
            max-width: 640px;
            background: linear-gradient(180deg, #0C6478 0%, #8DEE98 100%);
            border-radius: 18px;
            padding: 48px 40px;
            color: #fff;
            box-shadow: 0 12px 40px rgba(0,0,0,0.25);
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
        }

            .login-card::after {
                content: "";
                position: absolute;
                inset: 0;
                border-radius: 18px;
                box-shadow: 0 0 0 3px rgba(9,132,146,0.12) inset;
                pointer-events: none;
            }

            .login-card h2 {
                font-size: 30px;
                font-weight: 700;
                margin-bottom: 30px;
            }

        .input-box {
            width: 65%;
            min-width: 280px;
            margin: 22px 0;
            position: relative;
        }

            .input-box input {
                width: 100%;
                padding: 14px 44px 14px 18px;
                border-radius: 12px;
                border: 1.6px solid rgba(255,255,255,0.45);
                background: rgba(255,255,255,0.06);
                color: #fff;
                outline: none;
                font-size: 15px;
            }

                .input-box input::placeholder {
                    color: rgba(255,255,255,0.85);
                }

            .input-box .icon {
                position: absolute;
                right: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: rgba(255,255,255,0.8);
                cursor: pointer;
                font-size: 16px;
                opacity: 0.8;
            }

        .btn-login {
            width: 45%;
            min-width: 200px;
            margin-top: 16px;
            padding: 12px 18px;
            border-radius: 10px;
            background: rgba(33,58,88,0.9);
            border: none;
            color: #fff;
            font-weight: 600;
            box-shadow: 0 6px 18px rgba(0,0,0,0.2);
        }

            .btn-login:hover {
                background: rgba(33,58,88,1);
            }

        .links-row {
            width: 100%;
            margin-top: 35px;
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            gap: 6px;
            font-size: 13px;
            color: #fff;
            flex-wrap: nowrap;
        }

            .links-row a {
                color: rgba(255,255,255,0.9);
                text-decoration: none;
                white-space: nowrap;
            }

                .links-row a:hover {
                    text-decoration: underline;
                    opacity: 1;
                }

        /* Responsive */
        @@media (max-width: 768px) {
            .login-card {
                padding: 28px 20px;
                max-width: 92%;
            }

            .input-box {
                width: 100%;
            }

            .btn-login {
                width: 70%;
            }

            .links-row {
                flex-direction: column;
                gap: 10px;
                align-items: center;
                text-align: center;
                margin-top: 22px;
            }
        }

        @@media (max-width: 420px) {
            .login-card h2 {
                font-size: 22px;
            }

            .btn-login {
                width: 88%;
            }
        }
    </style>
</head>
<body>
    <div class="login-card" role="main">
        <h2>Đăng Nhập</h2>

        <form method="post" class="w-100 d-flex flex-column align-items-center">
            <div class="input-box">
                <input type="tel" name="phone" placeholder="Số điện thoại của bạn?" required pattern="[0-9]{10}" />
                <span class="icon"></span>
            </div>

            <div class="input-box">
                <input id="passwordField" type="password" name="password" placeholder="Mật khẩu (*)" required />
                <span class="icon toggle-password" title="Hiện/Ẩn mật khẩu">👁️</span>
            </div>

            <button type="submit" class="btn btn-login">Đăng Nhập</button>
        </form>

        <div class="links-row">
            <a href="@Url.Action("Login", "Account")">Đăng nhập bằng Email</a>
            <a href="@Url.Action("Register", "Account")">Chưa có tài khoản? <b>Đăng ký</b></a>
            <a href="@Url.Action("ForgotPassword", "Account")">Quên mật khẩu?</a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var toggle = document.querySelector('.toggle-password');
            if (toggle) {
                toggle.addEventListener('click', function () {
                    var pw = document.getElementById('passwordField');
                    if (!pw) return;
                    pw.type = (pw.type === 'password') ? 'text' : 'password';
                });
            }
        });
    </script>
</body>
</html>
