@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = null; // nếu đang dùng layout chung thì bỏ dòng này
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng Nhập</title>

    <!-- Bootstrap CSS (tùy chọn) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* background tạm (ảnh trong wwwroot/images/bg-temp.jpg) */
        body {
            margin: 0;
            font-family: "Segoe UI", system-ui, -apple-system, "Helvetica Neue", Arial;
            background: url('/images/login_background.jpg') no-repeat center center fixed;
        
            background-size: cover;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Card chính */
        .login-card {
            width: 80%;
            max-width: 640px; /* rộng như hình chữ nhật */
            background: linear-gradient(180deg, #0C6478 0%, #8DEE98 100%);
            border-radius: 18px;
            padding: 48px 40px;
            color: #fff;
            box-shadow: 0 12px 40px rgba(0,0,0,0.25);
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            /* Tiêu đề */
            .login-card h2 {
                font-size: 34px;
                font-weight: 700;
                margin-bottom: 30px;
            }

        /* Input box */
        .input-box {
            width: 60%; /* chiều rộng input so với card */
            min-width: 280px;
            margin: 22px 0; /* dãn khoảng cách giữa email & password */
            position: relative;
        }

            .input-box input {
                width: 100%;
                padding: 14px 44px 14px 18px;
                border-radius: 12px;
                border: 1.6px solid rgba(255,255,255,0.45);
                background: rgba(255,255,255,0.06);
                color: #fff;
                outline: none;
                font-size: 15px;
            }

                .input-box input::placeholder {
                    color: rgba(255,255,255,0.85);
                }

            .input-box .icon {
                position: absolute;
                right: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: rgba(255,255,255,0.8);
                cursor: pointer;
                font-size: 16px;
				opacity: 0.8;
            }

        /* Nút đăng nhập */
        .btn-login {
            width: 40%;
            min-width: 200px;
            margin-top: 16px;
            padding: 12px 18px;
            border-radius: 10px;
            background: rgba(33,58,88,0.9);
            border: none;
            color: #fff;
            font-weight: 600;
            box-shadow: 0 6px 18px rgba(0,0,0,0.2);
        }

            .btn-login:hover {
                background: rgba(33,58,88,1);
            }

        /* Links dưới cùng: 3 link trên 1 hàng desktop */
        .links-row {
            width: 100%;
            margin-top: 35px;
            display: flex;
            justify-content: center; /* căn giữa cả 3 link */
            align-items: center;
            flex-wrap: wrap; /* cho phép xuống hàng nếu hẹp */
            gap: 11px; /* tăng khoảng cách giữa các link */
            row-gap: 10px;
            font-size: 13px; /* nhỏ hơn một chút */
            text-align: center;
        }

            .links-row a {
                color: rgba(255,255,255,0.9);
                text-decoration: none;
                white-space: nowrap;
                padding: 4px 8px; /* thêm padding nhẹ để dễ đọc */
                transition: opacity 0.2s ease;
            }

                .links-row a:hover {
                    text-decoration: underline;
                    opacity: 1;
                }

        /* Viền mỏng màu xanh như trong ảnh (tuỳ ý) */
        .login-card::after {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 18px;
            pointer-events: none;
            box-shadow: 0 0 0 3px rgba(9,132,146,0.12) inset; /* nhẹ để nhìn giống viền */
        }

        
        @@media (max-width: 992px) {
            .input-box

        {
            width: 70%;
        }

        .btn-login {
            width: 48%;
        }

        .login-card h2 {
            font-size: 30px;
        }

        }

        @@media (max-width: 768px) {
            .login-card {
                padding: 28px 20px;
                max-width: 92%;
            }

            .input-box {
                width: 100%;
                margin: 18px 0;
            }

            .btn-login {
                width: 70%;
                min-width: 0;
            }
            /* chuyển links xuống hàng để không bị chồng */
            .links-row {
                flex-direction: column;
                gap: 10px;
                margin-top: 24px;
                font-size: 13px;
            }
        }

        @@media (max-width: 420px) {
            .login-card h2 {
                font-size: 22px;
                margin-bottom: 18px;
            }

            .input-box {
                margin: 14px 0;
            }

            .btn-login {
                width: 88%;
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="login-card" role="main">
        <h2>Đăng Nhập</h2>

        <form method="post" class="w-100 d-flex flex-column align-items-center">
            <div class="input-box">
                <input type="email" name="email" placeholder="Email của bạn?" required />
                <span class="icon">
                    <img src="~/images/delete.png"/>
                </span>
            </div>

            <div class="input-box">
                <input id="passwordField" type="password" name="password" placeholder="Mật Khẩu(*)" required />
                <span class="icon toggle-password" title="Hiện/Ẩn mật khẩu"></span>
            </div>

            <button type="submit" class="btn btn-login">Đăng Nhập</button>
        </form>

        <div class="links-row">
            <a href="@Url.Action("LoginByPhone", "Account")">Đăng nhập bằng Số điện thoại</a>
            <a href="@Url.Action("Register", "Account")">Bạn chưa có tài khoản? <b>Đăng ký</b></a>
            <a href="@Url.Action("ForgotPassword", "Account")">Bạn quên mật khẩu? <b>Quên mật khẩu?</b></a>
        </div>
    </div>

    <!-- Optional: Bootstrap JS (nếu cần) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle password show/hide
        document.addEventListener('DOMContentLoaded', function () {
            var toggle = document.querySelector('.toggle-password');
            if (toggle) {
                toggle.addEventListener('click', function () {
                    var pw = document.getElementById('passwordField');
                    if (!pw) return;
                    pw.type = (pw.type === 'password') ? 'text' : 'password';
                });
            }
        });
    </script>
</body>
</html>
