@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: "Segoe UI", system-ui, -apple-system, "Helvetica Neue", Arial;
            background: url('/images/login_background.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .forgot-card {
            width: 80%;
            max-width: 600px;
            background: linear-gradient(180deg, #0C6478 0%, #8DEE98 100%);
            border-radius: 18px;
            padding: 48px 40px;
            color: #fff;
            box-shadow: 0 12px 40px rgba(0,0,0,0.25);
            text-align: center;
            position: relative;
        }

            .forgot-card h2 {
                font-size: 30px;
                font-weight: 700;
                margin-bottom: 16px;
            }

            .forgot-card p {
                font-size: 15px;
                opacity: 0.9;
                margin-bottom: 28px;
            }

        .input-box {
            width: 80%;
            min-width: 260px;
            margin: 0 auto 25px;
            position: relative;
        }

            .input-box input {
                width: 100%;
                padding: 14px 44px 14px 18px;
                border-radius: 12px;
                border: 1.6px solid rgba(255,255,255,0.45);
                background: rgba(255,255,255,0.06);
                color: #fff;
                outline: none;
                font-size: 15px;
            }

                .input-box input::placeholder {
                    color: rgba(255,255,255,0.85);
                }

        .btn-send {
            width: 60%;
            min-width: 200px;
            padding: 12px 18px;
            border-radius: 10px;
            background: rgba(33,58,88,0.9);
            border: none;
            color: #fff;
            font-weight: 600;
            box-shadow: 0 6px 18px rgba(0,0,0,0.2);
            margin-top: 12px;
        }

            .btn-send:hover {
                background: rgba(33,58,88,1);
            }

        .back-login {
            display: block;
            margin-top: 25px;
            font-size: 13px;
            color: rgba(255,255,255,0.9);
            text-decoration: none;
        }

            .back-login:hover {
                text-decoration: underline;
            }

        @@media (max-width: 768px) {
            .forgot-card

        {
            max-width: 92%;
            padding: 32px 24px;
        }

        .btn-send {
            width: 80%;
        }

        .input-box {
            width: 100%;
        }

        }

        @@media (max-width: 420px) {
            .forgot-card h2

        {
            font-size: 22px;
        }

        .btn-send {
            width: 100%;
            padding: 10px;
        }

        }
    </style>
</head>
<body>
    <div class="forgot-card">
        <h2>Quên Mật Khẩu</h2>
        <p>Nhập số điện thoại hoặc email để nhận liên kết đặt lại mật khẩu.</p>

        <form method="post">
            <div class="input-box">
                <input type="text" name="phoneOrEmail" placeholder="Số điện thoại hoặc Email" required />
            </div>

            <button type="submit" class="btn btn-send">Gửi Liên Kết Đặt Lại</button>
        </form>

        <a href="@Url.Action("LoginByPhone", "Account")" class="back-login">← Quay lại đăng nhập</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
