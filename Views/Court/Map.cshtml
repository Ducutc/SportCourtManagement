<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bản đồ Pickleball</title>
    <script src="https://cdn.tailwindcss.com"></script>
    
    
@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Court/Map.css" />
}
</head>
<body class="relative h-screen w-full overflow-hidden">

    <!-- Bản đồ (nằm dưới) -->
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.760216065343!2d105.81723857503255!3d21.00299978063964!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab5d9a92808b%3A0xa340a8f2f5c18e7b!2zVmnDqm4gVMO0IFRo4bqhbmg!5e0!3m2!1svi!2s!4v1697895550282!5m2!1svi!2s"
            class="absolute inset-0 w-full h-full border-0"
            allowfullscreen=""
            loading="lazy"></iframe>

    <!-- Navbar nổi trên bản đồ -->
    <nav class="absolute top-0 left-0 w-full z-10 p-3">
        <div class="bg-transparent rounded-xl p-3 flex flex-col gap-3 md:flex-row md:items-center md:justify-between">

            <!-- Ô tìm kiếm -->
            <div class="flex items-center justify-center md:w-1/3 w-full">
                <div class="flex items-center bg-gray-100 rounded-full px-3 py-2 w-full max-w-xl">
                    <i class="fa-solid fa-magnifying-glass text-gray-500 mr-2"></i>
                    <input type="text"
                           placeholder="Tìm kiếm sân quanh đây..."
                           class="bg-transparent outline-none w-full text-gray-700" />
                </div>
            </div>

            <!-- Slider nút -->
            <div class="slider flex gap-2 overflow-x-auto whitespace-nowrap py-1 px-2 md:w-2/3">
                <button class="bg-white text-black px-3 py-2 rounded-full flex-shrink-0">
                    <i class="fa-solid fa-location-dot me-2"></i>Sân pickleball
                </button>
                <button class="bg-white text-black px-3 py-2 rounded-full flex-shrink-0">
                    <i class="fa-solid fa-location-dot me-2"></i>Sân bóng rổ
                </button>
                <button class="bg-white text-black px-3 py-2 rounded-full flex-shrink-0">
                    <i class="fa-solid fa-location-dot me-2"></i>Sân padel
                </button>
                <button class="bg-white text-black px-3 py-2 rounded-full flex-shrink-0">
                    <i class="fa-solid fa-location-dot me-2"></i>Sân bóng đá
                </button>
                <button class="bg-white text-black px-3 py-2 rounded-full flex-shrink-0">
                    <i class="fa-solid fa-location-dot me-2"></i>Sân bóng chuyền
                </button>
                <button class="bg-white text-black px-3 py-2 rounded-full flex-shrink-0">
                    <i class="fa-solid fa-location-dot me-2"></i>Sân cầu lông
                </button>
                <button class="bg-white text-black px-3 py-2 rounded-full flex-shrink-0">
                    <i class="fa-solid fa-location-dot me-2"></i>Sân tennis
                </button>
                <button class="bg-white text-black px-3 py-2 rounded-full flex-shrink-0">
                    <i class="fa-solid fa-location-dot me-2"></i>Sân golf
                </button>
                <button class="bg-white text-black px-3 py-2 rounded-full flex-shrink-0">
                    <i class="fa-solid fa-location-dot me-2"></i>Sân phức hợp
                </button>
            </div>
        </div>
    </nav>

    <!-- Nút chức năng góc phải dưới -->  
    <div class="btn-group corner-btn" role="group">
        <button type="button" class="btn-circle" id="menu-btn">
            <i class="fa-solid fa-list"></i>
        </button>
        <button type="button" class="btn-circle">
            <i class="fa-solid fa-location-crosshairs"></i>
        </button>
    </div>

    <!-- Field tab hiển thị các sân đề xuất -->
    <div id="field-tab" class="field-tab">
        <h3>Danh sách sân</h3>
        <ul class="field-list">
            <li>Sân A</li>
            <li>Sân B</li>
            <li>Sân C</li>
            <li>Sân D</li>
        </ul>
    </div>

    <!-- JS: Kéo slider bằng chuột -->
@section Scripts{
    <script src="~/js/Court/Map.js"></script>
}
</body>
</html>
